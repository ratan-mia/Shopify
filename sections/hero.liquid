<section class="inner-hero-section">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1>{{section.settings.title}}</h1>
        <p>{{section.settings.description}}</p>
        <a href="{{section.settings.button_link}}">{{section.settings.button_text}}</a>
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Hero Section",
    "class": "hero-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Heading Background"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Example Heading",
        "label": "Heading Title"
      },
      {
        "type": "richtext",
        "id": "description",
        "default": "<p>Example Paragraphp</p>",
        "label": "Heading Title"
      },
      {
        "id": "button_link",
        "type": "url",
        "label": "Button link"
      }, {
        "id": "button_text",
        "type": "text",
        "label": "Button text",
        "default": "Shop Now"
      }

    ],
    "presets": [
      {
        "category": "Hero",
        "name": "Simple Hero"
      }
    ]

  }
{% endschema %}